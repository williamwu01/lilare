<!-- Welcome section starts -->
<section class="first-gallery">
  <div class="container">
    {% assign imageUrl = section.settings.background_image %}
    {% assign wideImageUrl = section.settings.wide_image %}
    {% assign normalImageUrl = section.settings.normal_image %}
    <div class="background-container">
      <img
        class="background-image"
        src="{{ imageUrl | image_url: "100" }}"
        alt="Example Image"
        width="100%"
        height="100%"
      >
      <img class="wide" src="{{ wideImageUrl | image_url: "100" }}" alt="Example Image" width="800" height="100%">
    </div>
    <img class="normal" src="{{ normalImageUrl | image_url: "100" }}" alt="Example Image" width="100%" height="100%">
    <a href="{{ section.settings.button_link }}" class="button">{{ section.settings.button_text }}</a>
  </div>
</section>
<!-- Welcome section ends -->
{% schema %}
{
  "name": "Gallery with CTA",
  "tag": "section",
  "class": "gallery-with-cta",
  "settings": [
    {
      "type": "text",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "wide_image",
      "label": "Wide Image"
    },
    {
      "type": "text",
      "id": "normal_image",
      "label": "Normal Image"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Molten Metals"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Gallery with CTA"
    }
  ]
}
{% endschema %}

{% stylesheet %}
  .first-gallery .container {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    padding: 0 2rem;
  }

  .first-gallery .background-container {
    position: relative;
    width: 100%;
  }

  .first-gallery .container .background-image {
    max-height: 700px;
    object-fit: cover;
  }

  .first-gallery .container .wide {
    position: absolute;
    left: 0;
    right: 0;
    max-width: 600px;
    width: 80%;
    height: 80%;
    top: 12%;
    object-fit: cover;
    margin: 0 auto;
  }

  .first-gallery .container .normal {
    margin-top: -2rem;
    width: clamp(280px, 100%, 400px);
    height: 380px;
  }

  .first-gallery .button {
    margin: 1rem;
    padding: auto 1.5rem;
  }

  @media only screen and (min-width: 30rem) {
    .first-gallery .container .normal {
      position: absolute;
      right: 10px;
      bottom: 0;
    }
  }
  @media only screen and (min-width: 42.5rem) {
    /* Add your desktop styles here */
    .first-gallery .background-container {
      width: 80%;
    }
  }
{% endstylesheet %}
